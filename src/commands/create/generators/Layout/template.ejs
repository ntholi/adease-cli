'use client';

import { PropsWithChildren } from 'react';
import { ListItem, ListLayout, NewLink } from '@/components/adease';
import { findAll<%- plural(TableName) %> } from '@admin/<%= kebabCase(tableName) %>/server/actions';

export default function Layout({ children }: PropsWithChildren) {
  return (
    <ListLayout
      path={'/<%- adminDir %>/<%- kebabCase(plural(tableName)) %>'}
      queryKey={['<%- plural(tableName) %>']}
      getItems={findAll<%- plural(TableName) %>}
      actionIcons={[<NewLink key={'new-link'} href='/admin/<%- kebabCase(plural(tableName)) %>/new' />]}
      renderItem={(it) => <ListItem id={it.id} label={it.id} />}
    >
      {children}
    </ListLayout>
  );
}