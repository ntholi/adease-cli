'use server';

<% if (database === 'prisma') { %>import { Prisma } from '@prisma/client';<% } %>
<% if (database === 'drizzle') { %>import { <%= tableName %> } from '@/db/schema';<% } %>
import { <%= tableName %>Service } from '@/repositories/<%= tableName %>/service';

<% if (database === 'drizzle') { %>type <%- TableName %> = typeof <%- tableName %>.$inferInsert;<% } %>
<% if (database === 'prisma') { %>type <%- TableName %> = Prisma.<%- TableName %>CreateInput;<% } %>

export async function get<%= TableName %>(id: number) {
  return <%= tableName %>Service.get(id);
}

export async function getAll<%= TableName %>s(
  page: number = 1,
  search = ''
) {
  return <%= tableName %>Service.search(page, search);
}

export async function create<%= TableName %>(<%= singular(tableName) %>: <%= TableName %>) {
  return <%= tableName %>Service.create(<%= singular(tableName) %>);
}

export async function update<%= TableName %>(id: number, <%= singular(tableName) %>: <%= TableName %>) {
  return <%= tableName %>Service.update(id, <%= singular(tableName) %>);
}

export async function delete<%= TableName %>(id: number) {
  return <%= tableName %>Service.delete(id);
}