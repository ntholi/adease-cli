import {
  DetailsView,
  DetailsViewHeader,
  FieldView,
  DetailsViewBody,
} from '@/components/adease';
import { notFound } from 'next/navigation';
import { get<%- TableName %>, delete<%- TableName %> } from '../server/actions';

type Props = {
  params: Promise<{ id: string }>;
};

export default async function <%- TableName %>Details({ params }: Props) {
  const { id } = await params;
  const <%- tableName %> = await get<%- TableName %>(<%- pkType === 'number' ? 'Number(id)' : 'id' %>);
  
  if (!<%- tableName %>) {
    return notFound();
  }

  return (
    <DetailsView>
      <DetailsViewHeader 
        title={'<%- singular(TableWord) %>'} 
        queryKey={['<%- plural(tableName) %>']}
        handleDelete={async () => {
          'use server';
          await delete<%- TableName %>(<%- pkType === 'number' ? 'Number(id)' : 'id' %>);
        }}
      />
      <DetailsViewBody><% fields.forEach(function(prop) { %>
        <FieldView label='<%- capitalize(asWord(prop.name)) %>'>{<%- tableName %>.<%- prop.name %>}</FieldView><% }); %>
      </DetailsViewBody>
    </DetailsView>
  );
}