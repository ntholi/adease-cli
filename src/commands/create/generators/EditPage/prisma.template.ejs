import { Box } from '@mantine/core';
import { notFound } from 'next/navigation';
import Form from '../../Form';
import { Prisma } from '@prisma/client';
import { get<%= TableName %>, update<%= TableName %> } from '../../actions';

type <%= TableName %> = Prisma.<%= TableName %>CreateInput;

type Props = {
  params: Promise<{ id: string }>;
};

export default async function <%- TableName %>Edit({ params }: Props) {
  const { id } = await params;
  const <%- tableName %> = await get<%- TableName %>(Number(id));
  if (!<%- tableName %>) {
    return notFound();
  }

  const handleSubmit = async (values: <%= TableName %>): Promise<<%= TableName %>> => {
    await update<%= TableName %>(id, values);
    return values;
  };

  return (
    <Box p={'lg'}>
      <Form
        defaultValues={<%- tableName %>}
        onSubmit={handleSubmit}
      />
    </Box>
  );
}