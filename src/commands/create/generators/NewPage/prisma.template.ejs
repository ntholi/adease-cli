import { Box } from '@mantine/core';
import Form from '../../Form';
import { create<%= TableName %> } from '@/server/<%= kebabCase(tableName) %>/actions';
import { Prisma } from '@prisma/client';

type <%= TableName %> = Prisma.<%= TableName %>CreateInput;

export default async function NewPage() {
  const handleSubmit = async (values: <%= TableName %>): Promise<<%= TableName %>> => {
    'use server';
    await create<%= TableName %>(values);
    return values;
  };

  return (
    <Box p={'lg'}>
      <Form title={'Create <%= singular(TableWord) %>'} onSubmit={handleSubmit} />
    </Box>
  );
}
