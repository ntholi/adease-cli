import { NextRequest } from 'next/server';
import { routeException } from '@/utils/exceptions';
import { <%= tableName %>Service } from '@/repositories/<%= tableName %>/service';


type Props = {
  params: { id: string };
};

export async function GET(_: NextRequest, { params }: Props) {
  return routeException(async () => {
    const id = parseInt(params.id);
    return <%= tableName %>Service.get(id);
  });
}

export async function PUT(request: NextRequest, { params }: Props) {
  return routeException(async () => {
    const id = parseInt(params.id);
    const data = await request.json();
    return <%= tableName %>Service.update(id, data);
  });
}

export async function DELETE(_: NextRequest, { params }: Props) {
  return routeException(async () => {
    const id = parseInt(params.id);
    return <%= tableName %>Service.delete(id);
  });
} 