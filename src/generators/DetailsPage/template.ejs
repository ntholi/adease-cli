import {
  DetailsView,
  DetailsViewHeader,
  FieldView,
  DetailsViewBody,
} from '@/components/adease';
import { notFound, redirect } from 'next/navigation';
import { get<%- TableName %>, delete<%- TableName %> } from '../actions';

type Props = {
  params: Promise<{ id: string }>;
};

export default async function <%- TableName %>Details({ params }: Props) {
  const { id } = await params;
  const <%- tableName %> = await get<%- TableName %>(Number(id));
  
  if (!<%- tableName %>) {
    return notFound();
  }

  async function handleDelete() {
    'use server';
    await delete<%- TableName %>(Number(id));
    redirect('/<%- adminDir %>/<%- plural(tableName) %>');
  }

  return (
    <DetailsView>
      <DetailsViewHeader 
        title={'<%- singular(TableWord) %>'} 
        queryKey={['<%- plural(tableName) %>']}
        handleDelete={handleDelete} />
      <DetailsViewBody><% fields.forEach(function(prop) { %>
        <FieldView label='<%- capitalize(asWord(prop.name)) %>'>{<%- tableName %>.<%- prop.name %>}</FieldView><% }); %>
      </DetailsViewBody>
    </DetailsView>
  );
}